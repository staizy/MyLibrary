<Window x:Class="MyLibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyLibrary"
        mc:Ignorable="d"
        Title="Библиотека" Height="600" Width="1050"
        MinHeight="400" MinWidth="1050">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center">
            Пользователи
        </Label>
        <Label Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center">
            Книги пользователя
        </Label>
        <Label Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center">
            Все книги
        </Label>
        
        <ListView Name="UserNameList" Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" SelectionChanged="UserNameList_SelectionChanged">
            <ListView.View>
            <GridView AllowsColumnReorder="False">
                    <GridViewColumn Header="ID" Width="30" DisplayMemberBinding="{Binding Path=Id}"/>
                    <GridViewColumn Header="Имя" Width="100" DisplayMemberBinding="{Binding Path=Name}"/>
                    <GridViewColumn Header="Фамилия" Width="100" DisplayMemberBinding="{Binding Path=Surname}"/>
            </GridView>
            </ListView.View>
        </ListView>
        <ListView Name="UserBooksList" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2">
            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <GridViewColumn Header="Артикль" Width="50" DisplayMemberBinding="{Binding Path=Article}"/>
                    <GridViewColumn Header="Автор" Width="50" DisplayMemberBinding="{Binding Path=Author}"/>
                    <GridViewColumn Header="Название" Width="70" DisplayMemberBinding="{Binding Path=Name}"/>
                    <GridViewColumn Header="Год написания" Width="90" DisplayMemberBinding="{Binding Path=Age}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView Name="AllBooksList" Grid.Column="2" Grid.Row="1" Grid.RowSpan="2">
            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <GridViewColumn Header="Артикль" Width="50" DisplayMemberBinding="{Binding Path=Article}"/>
                    <GridViewColumn Header="Автор" Width="50" DisplayMemberBinding="{Binding Path=Author}"/>
                    <GridViewColumn Header="Название" Width="70" DisplayMemberBinding="{Binding Path=Name}"/>
                    <GridViewColumn Header="Год написания" Width="90" DisplayMemberBinding="{Binding Path=Age}"/>
                    <GridViewColumn Header="Количество" Width="70" DisplayMemberBinding="{Binding Path=Count}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Expander Header="Поиск пользователя" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="3" VerticalAlignment="Bottom">
            <StackPanel Grid.Row="3">
            <Label HorizontalAlignment="Center">
                Поиск пользователя по ID
            </Label>
            <TextBox Name="IdSearch" FontSize="12"/>
            <Label HorizontalAlignment="Center">
                Поиск пользователя по имени
            </Label>
            <TextBox Name="NameSearch" FontSize="12"/>
            <Label HorizontalAlignment="Center">
                Поиск пользователя по фамилии
            </Label>
            <TextBox Name="SurnameSearch" FontSize="12"/>
                <Button Content="FIND" Name="FindUser_Button" Click="FindUser_Click"/>
            </StackPanel>
        </Expander>

        <Expander Header="Поиск среди книг пользователя" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <StackPanel Grid.Row="3" Grid.Column="1">
            <Label HorizontalAlignment="Center">
                Поиск среди книг пользователя по артиклю
            </Label>
            <TextBox FontSize="12"/>
            <Label HorizontalAlignment="Center">
                Поиск среди книг пользователя по автору
            </Label>
            <TextBox FontSize="12"/>
            <Label HorizontalAlignment="Center">
                Поиск среди книг пользователя по названию
            </Label>
            <TextBox FontSize="12"/>
            <Label HorizontalAlignment="Center">
                Поиск среди книг пользователя по году написания
            </Label>
            <TextBox FontSize="12"/>
        </StackPanel>
        </Expander>

        <Expander Grid.Column="2" Header="Поиск среди всех книг" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Bottom">
        <StackPanel Grid.Row="3" Grid.Column="2">
            <Label HorizontalAlignment="Center">
                Поиск среди всех книг по артиклю
            </Label>
            <TextBox FontSize="12"/>
            <Label HorizontalAlignment="Center">
                Поиск среди всех книг  по автору
            </Label>
            <TextBox FontSize="12"/>
            <Label HorizontalAlignment="Center">
                Поиск среди всех книг по названию
            </Label>
            <TextBox FontSize="12"/>
            <Label HorizontalAlignment="Center">
                Поиск среди всех книг по году написания
            </Label>
            <TextBox FontSize="12"/>
            <Button Content="Добавить книгу пользователю"  FontSize="14px" Click="AddBookButton_Click"/>
        </StackPanel>
        </Expander>
    </Grid>
</Window>
